     "name": "send empty event",
     "event": [
      {
       "listen": "test",
       "script": {
        "type": "text/javascript",
        "exec": [
         "((pm) => {\n        pm.test('should return 400', function () {\n            pm.response.to.have.status(parseInt('400', 10));\n            if ('err: Bad Request') {\n                pm.expect(pm.response.text()).to.equal('err: Bad Request')\n            }\n        });\n    })(pm);"
        ]
       }
      },
      {
       "listen": "prerequest",
       "script": {
        "type": "text/javascript",
        "exec": [
         "(() => {})(pm);"
        ]
       }
      }
     ],
